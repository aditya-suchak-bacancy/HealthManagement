<div class="forms">
<%= form_for @user do |f| %>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <%= f.text_field :username, placeholder: "Username" %>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <%= f.password_field :password, placeholder: "Password" %>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Confirm Password</label>
        <div class="col-sm-10">
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %> 
        </div>
    </div>   
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <%= f.text_field :name %> 
        </div>
    </div>
    <div class="form-group row">
        <label  class="col-sm-2 col-form-label"> Last Name</label>
        <div class="col-sm-10">
            <%= f.text_field :last_name %> 
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label"> Date of Birth</label>
        <div class="date">
            <%= f.date_field :dob, class: 'form-control' %>
        </div>
    </div>    
    <div class="radiobtn">
            <%= f.radio_button :gender, 'male' %> 
            <%= f.label :gender, 'male', :value => 'male' %>
            <%= f.radio_button :gender, 'female' %>
            <%= f.label :gender, 'female', :value => 'female' %>
    </div>
    <div class="radiobtn">
        <label for="example-number-input" class="col-2 col-form-label">weight</label>
        <%= f.number_field :weight, step: :any %>
    </div>
    <div class="radiobtn">
        <label for="example-number-input" class="col-2 col-form-label">Height</label>
        <%= f.number_field :height ,step: :any %>
    </div>
    </br>
    </br>
    <%= f.submit class:"btn btn-primary" %>
    </br>
    </br>
<% end %>
</div>

