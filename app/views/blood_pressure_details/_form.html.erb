<div class="forms-rec">
<%= form_with model: @blood_pressure_detail, url: new_blood_pressure_url do |f| %>
  <div class="form-group row">
      <label  class="col-sm-2 col-form-label">Systolic Blood Pressure</label>
      <div class="col-sm-10">
        <%= f.number_field :s_blood_pressure, step: :any %>
      </div>
  </div>
  <div class="form-group row">
      <label  class="col-sm-2 col-form-label">Diastolic Blood Pressure</label>
      <div class="col-sm-10">
        <%= f.number_field :d_blood_pressure, step: :any %>
      </div>
  </div>
  <div class="form-group row">
      <label  class="col-sm-2 col-form-label">Blood Pressure Date</label>
      <div class="col-sm-10">
        <%= f.date_field :blood_pressure_date, class: 'form-control' %>
      </div>
  </div>
  <%= f.submit class:"btn btn-primary" %> 
<% end %>
</div>
  